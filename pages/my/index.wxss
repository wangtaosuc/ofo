/* pages/my/index.wxss */
.container{
  background-color: #f2f2f2;
  width: 100%;
  height: 100vh;
  margin: 0;
  padding:0;
}
 .user-info{
  padding-top: 60rpx;
  background-color: #fff;
  width: 100%;

} 
.user-info .img {
  height: 180rpx;
  width: 180rpx;
  border-radius: 50%;
  border:1px solid black; 
  margin: 30rpx auto 40rpx;
  box-shadow: 0 0  20rpx rgba(0, 0, 0, 0.2);
  background-color: #fff; 
}
.user-info .img image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.uer-name{
  padding: 30rpx 0;
  display: inline-block;
  width: 100%;
  text-align: center;
}
.my-wallet{
  padding: 40rpx  ;
  background-color: #fff;
  width: 100%;
  /* text-align: center; */
  /* margin-top: 40rpx; */
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.btn-login{
  width: 90%;
  margin-bottom: 5%;
}